<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lrmate200ic5l_with_sg2">
    <!-- =======================================================================
         GAZEBO HARMONIC COMPATIBLE URDF
         Uses gz-sim8 plugin naming and ogre2 (with ogre-next fix)
    ======================================================================= -->
    
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />
    
    <!-- Gazebo Harmonic system plugin library/class -->
    <xacro:arg name="gz_control_lib" default="gz_ros2_control-system" />
    <xacro:arg name="gz_control_name" default="gz_ros2_control::GazeboSimROS2ControlPlugin" />
    
    <!-- ros2_control hardware plugin (GZ Sim) -->
    <xacro:arg name="hardware_plugin" default="gz_ros2_control/GazeboSimSystem" />
    
    <!-- Sensors system plugin (Harmonic naming) -->

    <!-- Add world link and joint to fix frame issues -->
    <link name="world"/>
    
    <joint name="world_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <!-- Import lrmate200ic5l_with_sg2 urdf file -->
    <xacro:include filename="$(find fanuc_arm_config)/urdf/fanuc200ic5l_w_sg2.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="lrmate200ic5l_with_sg2.ros2_control.xacro" />

    <!-- Add gazebo-specific joint configurations -->
    <gazebo reference="joint_1">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>
    <gazebo reference="joint_2">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>
    <gazebo reference="joint_3">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>
    <gazebo reference="joint_4">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>
    <gazebo reference="joint_5">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>
    <gazebo reference="joint_6">
        <implicitSpringDamper>true</implicitSpringDamper>
    </gazebo>

    <xacro:lrmate200ic5l_with_sg2_ros2_control
        name="lrmate200ic5l_hardware"
        initial_positions_file="$(arg initial_positions_file)"
        hardware_plugin="$(arg hardware_plugin)"/>

    <!-- Gazebo Sim system plugin for ros2_control (Harmonic compatible) -->
    <gazebo>
        <plugin name="$(arg gz_control_name)" filename="$(arg gz_control_lib)">
            <parameters>$(find fanuc_arm_config)/config/ros2_controllers.yaml</parameters>
            <robot_param>robot_description</robot_param>
            <robot_param_node>robot_state_publisher</robot_param_node>
        </plugin>
    </gazebo>

    <!-- D405 Depth Camera Gazebo Plugin (Intel RealSense D405) -->
    <!-- Harmonic has ogre-next fix - can use ogre2 safely for sensors -->
    <gazebo reference="tool_d405_camera">
        <sensor name="d405_depth_camera" type="rgbd_camera">
            <update_rate>30</update_rate>
            <always_on>true</always_on>
            <visualize>true</visualize>
            
            <!-- Topic configuration - must match ros_gz_bridge topics -->
            <topic>d405</topic>
            <gz_frame_id>tool_d405_camera</gz_frame_id>
            
            <camera name="d405">
                <!-- D405 has 87° × 58° FOV -->
                <horizontal_fov>1.518</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <depth_camera>
                    <clip>
                        <near>0.16</near>
                        <far>10.0</far>
                    </clip>
                    <output>points</output>
                </depth_camera>
                <clip>
                    <near>0.16</near>
                    <far>10.0</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>
        </sensor>
    </gazebo>

    <!-- NOTE: Sensors system plugin is defined in the world file, NOT here -->
    <!-- Having it in both places causes duplicate scene node errors with Ogre1 -->
    <!-- World file uses: <render_engine>ogre</render_engine> for WSL2 d3d12 compatibility -->

</robot>
